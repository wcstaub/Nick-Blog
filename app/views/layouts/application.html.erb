<!DOCTYPE html>
<html>
  <head>
    <title>NicksBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<div class="container">
 
  <div class="pull-right">
    <% if user_signed_in? %>
      <%= gravatar_tag current_user.email, size: 35 %>
      <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-warning" %>
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
    <% end %>
  </div>
  	<div class="container">
    <%= yield %>
    </div>
  </body>
</html>
